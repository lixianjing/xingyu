<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_public_item"
    android:layout_margin="10dip"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_public_emotion_icon_iv"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_public_emotion_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="李仙靖" />

            <TextView
                android:id="@+id/item_public_emotion_date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="今天 01:24" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/item_public_emotion_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="信息" />

    <com.xian.xingyu.view.ImageScrollView
        android:id="@+id/item_public_emotion_image_hsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:scrollbars="none" >
    </com.xian.xingyu.view.ImageScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_public_emotion_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留言" />

        <TextView
            android:id="@+id/item_public_emotion_fav_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点赞" />
    </LinearLayout>

</LinearLayout>