<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/left_login_fl"
        android:layout_width="match_parent"
        android:layout_height="88dip" >

        <LinearLayout
            android:id="@+id/left_login_info_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/left_login_info_icon_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/left_login_info_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name" />

                <TextView
                    android:id="@+id/left_login_info_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hello" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/left_login_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登入" />
    </FrameLayout>

    <Button
        android:id="@+id/left_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dip"
        android:text="首页" />

    <Button
        android:id="@+id/left_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left_btn1"
        android:layout_centerInParent="true"
        android:padding="10dip"
        android:text="设置" />

    <Button
        android:id="@+id/left_btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left_btn2"
        android:layout_centerInParent="true"
        android:padding="10dip"
        android:text="意见" />

</LinearLayout>