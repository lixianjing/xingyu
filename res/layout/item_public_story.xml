<com.xian.xingyu.view.PublicStoryItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dip"
    android:background="@drawable/shape_public_item"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/item_public_story_iv"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/item_public_story_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="感情故事。。。" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_public_story_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留言" />

        <TextView
            android:id="@+id/item_public_story_fav_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点赞" />
    </LinearLayout>

</com.xian.xingyu.view.PublicStoryItem>