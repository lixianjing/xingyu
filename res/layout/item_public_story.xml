<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_public_icon_iv"
            android:layout_width="44dip"
            android:layout_height="44dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_public_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="李仙靖" />

            <TextView
                android:id="@+id/item_public_date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="今天 01:24" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/item_public_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="信息" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_public_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留言" />

        <TextView
            android:id="@+id/item_public_fav_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点赞" />
    </LinearLayout>

</LinearLayout>